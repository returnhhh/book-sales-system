<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mapper.BookMapper">

    <resultMap type="com.ruoyi.domain.Book" id="BookResult">
        <id     property="bookId"       column="book_id"      />
        <result property="createBy"        column="create_by"        />
        <result property="createDate"       column="create_date"       />
        <result property="updateBy"   column="update_by"   />
        <result property="updateDate"     column="update_date"     />
        <result property="bookName"         column="book_name"          />
        <result property="author"  column="author"  />
        <result property="press"  column="press"  />
        <result property="bookType"  column="book_type"  />
        <result property="bookImg"  column="book_img"  />
        <result property="bookPrice"  column="book_price"  />
        <result property="bookIntroduce"  column="book_introduce"  />
        <result property="bookPressTime"  column="book_press_time"  />
        <result property="bookNum"  column="book_num"  />
        <result property="createTime"     column="create_time"     />
    </resultMap>

<!--    添加书籍-->
    <insert id="addBook" parameterType="com.ruoyi.domain.Book" useGeneratedKeys="true" keyProperty="bookId">
        insert into books(
        book_id,create_by,create_date,update_by,update_date,book_name,author,press,book_type,book_img,book_price,book_introduce,book_press_time,book_num,create_time
        )values(
        #{bookId},#{createBy},sysdate(),#{updateBy},#{updateDate},#{bookName},#{author},#{press},#{bookType},#{bookImg},
                #{bookPrice},#{bookIntroduce},#{bookPressTime},#{bookNum},#{createTime}
        )
    </insert>

</mapper>